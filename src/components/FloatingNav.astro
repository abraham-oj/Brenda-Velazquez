<style>
  .floating-container {
    position: fixed;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 15px;
    z-index: 1000;
  }

  .float-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    transition:
      transform 0.3s,
      width 0.3s;
    overflow: hidden;
    position: relative;
    border: none;
    cursor: pointer;
  }

  .float-btn:hover {
    transform: scale(1.1);
  }

  .fb {
    background: #1877f2;
  }
  .insta {
    background: #e1306c;
  }
  .twitter {
    background: #000;
  }

  /* BotÃ³n de audio especial */
  .audio-btn {
    background: #76bc21;
    transition:
      width 0.3s ease,
      background 0.3s ease;
  }

  .audio-btn .text {
    display: none;
    margin-left: 8px;
    font-size: 0.8rem;
    font-weight: bold;
    white-space: nowrap;
  }

  .audio-btn:hover {
    width: 120px;
    border-radius: 25px;
  }

  .audio-btn:hover .text {
    display: block;
  }

  .audio-btn.playing {
    background: #004d25;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(118, 188, 33, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(118, 188, 33, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(118, 188, 33, 0);
    }
  }

  @media (max-width: 768px) {
    .floating-container {
      top: auto;
      bottom: 20px;
      right: 20px;
      flex-direction: row-reverse;
    }
  }
</style>

<script>
  // LÃ³gica del Audio
  const btn = document.getElementById("audioToggle");
  const audio = document.getElementById("bgMusic");

  if (btn && audio) {
    const icon = btn.querySelector(".icon");

    // Convertir a tipo HTMLAudioElement para TypeScript
    const audioEl = audio as HTMLAudioElement;

    btn.addEventListener("click", () => {
      if (audioEl.paused) {
        audioEl
          .play()
          .then(() => {
            if (icon) icon.textContent = "ðŸ”Š";
            btn.classList.add("playing");
          })
          .catch((err) => console.log("Error audio:", err));
      } else {
        audioEl.pause();
        if (icon) icon.textContent = "ðŸ”‡";
        btn.classList.remove("playing");
      }
    });
  }
</script>
